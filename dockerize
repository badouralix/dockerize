dockerize () {
	if [ $# -eq 0 ]; then
		echo "Usage: $0 name[:tag]"
		return 1
	fi

	local DOCKER_PREFIX=${DOCKER_PREFIX:-"$USER-local"}
	docker build -t $DOCKER_PREFIX/$1 .
}

# vim: ft=sh
